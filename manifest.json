{
    "manifest_version": 3,
    "name": "SimplePasswordGenerator",
    "version": "3.6",
    "description": "Generate secure passwords with options for uppercase, numbers, and symbols.",
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "ico/icon16.png",
      "48": "ico/icon48.png",
      "128": "ico/icon128.png"
    },
    "background": { "service_worker": "background.js" },
    "permissions": ["storage", "sidePanel"],
    "side_panel": {
      "default_path": "popup.html?sidepanel=1"
    }
}